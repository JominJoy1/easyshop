<!-- res/drawable/star.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="5dp" android:right="5dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape
                android:shape="rectangle">
                <size
                    android:width="10dp"
                    android:height="10dp" />
                <solid android:color="#FFFF00" />
            </shape>
        </rotate>
    </item>

    <item android:top="5dp" android:left="5dp">
        <rotate
            android:fromDegrees="135"
            android:toDegrees="135"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape
                android:shape="rectangle">
                <size
                    android:width="10dp"
                    android:height="10dp" />
                <solid android:color="#FFFF00" />
            </shape>
        </rotate>
    </item>

</layer-list>
